<?xml version="1.0"?>
<ruleset name="WordPress Plugin 1x Coding Standards">
    <description>WordPress Plugin 1x Coding Standards</description>
    
    <!-- Set the standard to WordPress -->
    <arg name="standard" value="wordpress"/>
    
    <!-- Specify the files or directories to be checked -->
    <file>./</file>
    
    <!-- Exclude specific directories or files from checking -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>
    <exclude-pattern>dist/*</exclude-pattern>
    
    <!-- Show sniff codes in reports -->
    <arg value="s"/>
    
    <!-- Set the severity level of issues to report -->
    <arg name="severity" value="10"/>
    
    <!-- Show progress of the run -->
    <arg value="p"/>
    
    <!-- Show sniff codes in reports -->
    <arg value="s"/>
    
    <!-- Set the encoding of the files to be checked -->
    <arg name="encoding" value="utf-8"/>
</ruleset>
